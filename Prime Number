Check whether the number is prime or not

#include <iostream>
using namespace std;
int main() {
    int n,i,flag=0;
    cout<<"\nEnter the number you want to check: ";
    cin>>n;
    for(i =1;i<=n;i++){
        if(n%i == 0){
            flag++;
        }
    }
    if(flag==2){
        cout<<n<< " is a prime number.";
    }
    else
    cout<<n<< " is not a prime number";
    return 0;
}
